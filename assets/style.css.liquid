* {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  list-style-type: none;
  text-decoration: none;
}
body {
  font-family: 'Poppins', sans-serif;
}
.page-width {
  padding: 0 80px;
}
.intro {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #2D2A2A;
  width: 100%;
  height: 14vh;
}
.intro .intro-text h5 {
  text-align: center;
  color: #989797;
}
.contact-number a,
.contact-number i {
  color: #FFFFFF;
  font-size: 14px;
}
.contact-number i {
  font-size: 17px;
}
header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #FFFFFF;
  color: #fff;
  margin-top: 7px;
}
.logo a img {
  width: 163px;
  height: auto;
}
.search-box input[type="text"] {
  position: relative;
  outline: none;
  width: 240px;
  height: 40px;
  font-family: lato, sans-serif;
  font-size: 16px;
  background: #f8f7f7;
  border: none;
  border-radius: 5px;
  padding: 10px;
}
.search-icon i {
  position: absolute;
  left: 848px;
  top: 78px;
  font-size: 20px;
}